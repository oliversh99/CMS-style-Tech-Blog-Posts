<main>
{{#if posts.length}}
<section>
  <h2>Post History</h2>
    {{#each posts as |post|}}
        <div class="card">
            <div class="card-header">
                <div class="col">
                <h4><a class="link text-decoration-none" href="/dashboard/edit/{{post.id}}">{{post.title}}</a></h4>
                </div>
                <div class="col">
                <h4><a class="link" href="/dashboard/edit/{{post.id}}">{{post.user.name}}</a></h4>
                </div>
            </div>
        </div>
        <br/>
    {{/each}}

</section>
{{/if}}

<button type="submit" class="btn btn-lg btn-primary mb-3"><a class="link-light text-decoration-none" href="/dashboard/new">Add New Post</a></button>

</main>