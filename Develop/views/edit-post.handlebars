<main>
<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form" id="edit-post-form">

        <label for="post-title" class="form-label">Title</label>
        <br/>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input w-100" />

        <label class="form-label" for="content">Content</label>
        <br/>
        <textarea name="content" type="text" class="form-input w-100" style="height: 150px">{{post.post_content}}</textarea>

        <button type="submit" class="w-100 btn btn-lg btn-info mb-3">Update Post</button>
        <button type="button" class="delete-post-btn w-100 btn btn-lg btn-danger mb-3">Delete Post</button>
    </form>
</div>
</main>
    <script src="/js/postEdit.js"></script>
    <script src="/js/postDelete.js"></script>